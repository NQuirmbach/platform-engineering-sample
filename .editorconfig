# EditorConfig helps maintain consistent coding styles for multiple developers
# working on the same project across various editors and IDEs.
root = true

[*]
# Set default charset to UTF-8
charset = utf-8

# Indentation style and size
indent_style = space
indent_size = 2

# Remove any trailing whitespace characters
trim_trailing_whitespace = true

# Insert a final newline at the end of files
insert_final_newline = true

# Max line length
max_line_length = 100

# Specific configuration for different file types

[*.md]
# For markdown files, keep default behavior (typically 4 spaces for lists)
indent_size = 2
trim_trailing_whitespace = false  # Allow trailing whitespace in markdown

[*.yml]
[*.yaml]
# YAML files should also use 2 spaces
indent_size = 2

[*.tf]
# Terraform configuration files should use 2 spaces
indent_size = 2

[*.sh]
# Shell scripts should also use 2 spaces
indent_size = 2
